@model IEnumerable<to_do_list.Models.Category>

@{
    ViewData["Title"] = "Категории";
}

<h2 class="mb-3">Категории</h2>

<p>
    <a asp-action="Create" class="btn btn-success">+ Нова категория</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Име</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-primary">Редактирай</a>
                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-danger">Изтрий</a>
                </td>
            </tr>
        }
    </tbody>
</table>
