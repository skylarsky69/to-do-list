@model to_do_list.Models.TodoTask

@{
    ViewData["Title"] = "Детайли за задача";
}

<h2 class="mt-4 mb-3">Детайли за задача</h2>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">@Model.Title</h4>
        <p class="card-text"><strong>Описание:</strong> @Model.Description</p>
        <p class="card-text"><strong>Краен срок:</strong> @Model.DueDate.ToShortDateString()</p>
        <p class="card-text"><strong>Категория:</strong> @Model.Category?.Name</p>
        <p class="card-text"><strong>Приоритет:</strong> @Model.Priority?.Name</p>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Редактирай</a>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
</div>
