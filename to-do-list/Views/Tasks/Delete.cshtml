@model to_do_list.Models.TodoTask

@{
    ViewData["Title"] = "Изтриване на задача";
}

<h2 class="mt-4 mb-3">Изтриване на задача</h2>

<div class="alert alert-warning">
    <p>Сигурни ли сте, че искате да изтриете следната задача?</p>
</div>

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text"><strong>Описание:</strong> @Model.Description</p>
        <p class="card-text"><strong>Краен срок:</strong> @Model.DueDate.ToShortDateString()</p>
        <p class="card-text"><strong>Категория:</strong> @Model.Category?.Name</p>
        <p class="card-text"><strong>Приоритет:</strong> @Model.Priority?.Name</p>
    </div>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Изтрий</button>
    <a asp-action="Index" class="btn btn-secondary">Отказ</a>
</form>
