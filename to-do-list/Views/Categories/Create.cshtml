@model to_do_list.Models.Category

@{
    ViewData["Title"] = "Добави категория";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken() 

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Име на категория</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Създай
    </button>
    <a asp-action="Index" class="btn btn-outline-secondary ms-2">Отказ</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
